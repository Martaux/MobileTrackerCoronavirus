<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="@color/colorPrimary3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:src="@drawable/path50" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/aclonica"
            android:text="COVID-19"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="30sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:fontFamily="@font/aclonica"
            android:text="@string/about_covid"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statystyki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="2dp"
        android:layout_margin="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/colorWhite">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="STATYSTYKI"
            android:textSize="16sp"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:fontFamily="@font/aclonica"
            android:textColor="@color/colorDark"/>
        <ImageButton
            android:id="@+id/button_go"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:background="@color/colorDark"
            android:src="@drawable/ic_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/statystyki"
        android:layout_margin="30dp"
        android:padding="2dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="INFORMACJE"
            android:textSize="16sp"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:fontFamily="@font/aclonica"
            android:textColor="@color/colorDark"/>
        <ImageButton
            android:id="@+id/button_info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:background="@color/colorDark"
            android:src="@drawable/ic_arrow"/>
    </LinearLayout>

</RelativeLayout>
